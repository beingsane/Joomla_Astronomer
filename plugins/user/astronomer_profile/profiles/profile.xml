<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="profile">
		<fieldset name="profile"
				  label="PLG_USER_ASTRONOMER_PROFILE_SLIDER_LABEL"
		>
			<field
				name="observername"
				type="list"
				id="observername"
				description="PLG_USER_ASTRONOMER_PROFILE_FIELD_OBSERVERNAME_DESC"
				filter="string"
				label="PLG_USER_ASTRONOMER_PROFILE_FIELD_OBSERVERNAME_LABEL"
				size="30"
			/>

			<field
				name="observeratory"
				type="list"
				id="observeratory"
				description="PLG_USER_ASTRONOMER_PROFILE_FIELD_OBSERVERATORY_DESC"
				filter="string"
				label="PLG_USER_ASTRONOMER_PROFILE_FIELD_OBSERVERATORY_LABEL"
				size="30"
			/>

			<field
				name="header"
				type="list"
				id="header"
				description="PLG_USER_ASTRONOMER_PROFILE_FIELD_HEADER_DESC"
				filter="string"
				label="PLG_USER_ASTRONOMER_PROFILE_FIELD_HEADER_LABEL"
				size="30"
			/>

			<field
				name="scope"
				type="list"
				id="scope"
				description="PLG_USER_ASTRONOMER_PROFILE_FIELD_SCOPE_DESC"
				filter="string"
				label="PLG_USER_ASTRONOMER_PROFILE_FIELD_SCOPE_LABEL"
				size="30"
			/>

			<field
				name="country"
				type="list"
				id="country"
				description="PLG_USER_ASTRONOMER_PROFILE_FIELD_COUNTRY_DESC"
				filter="string"
				label="PLG_USER_ASTRONOMER_PROFILE_FIELD_COUNTRY_LABEL"
				size="30"
			/>

			<field
				name="postal_code"
				type="list"
				id="postal_code"
				description="PLG_USER_ASTRONOMER_PROFILE_FIELD_POSTAL_CODE_DESC"
				filter="string"
				label="PLG_USER_ASTRONOMER_PROFILE_FIELD_POSTAL_CODE_LABEL"
				size="30"
			/>

			<field
				name="phone"
				type="tel"
				id="phone"
				description="PLG_USER_ASTRONOMER_PROFILE_FIELD_PHONE_DESC"
				filter="string"
				label="PLG_USER_ASTRONOMER_PROFILE_FIELD_PHONE_LABEL"
				size="30"
			/>

			<field
				name="website"
				type="url"
				id="website"
				description="PLG_USER_ASTRONOMER_PROFILE_FIELD_WEB_SITE_DESC"
				filter="url"
				label="PLG_USER_ASTRONOMER_PROFILE_FIELD_WEB_SITE_LABEL"
				size="30"
			/>
			<field
				name="favoritebook"
				type="list"
				description="PLG_USER_ASTRONOMER_PROFILE_FIELD_FAVORITE_BOOK_DESC"
				filter="string"
				label="PLG_USER_ASTRONOMER_PROFILE_FIELD_FAVORITE_BOOK_LABEL"
				size="30"
			/>
			<field
				name="aboutme"
				type="textarea"
				description="PLG_USER_ASTRONOMER_PROFILE_FIELD_ABOUT_ME_DESC"
				label="PLG_USER_ASTRONOMER_PROFILE_FIELD_ABOUT_ME_LABEL"
				cols="30"
				rows="5"
				filter="safehtml"
			/>
			<field
				name="dob"
				type="dob"
				label="PLG_USER_ASTRONOMER_PROFILE_FIELD_DOB_LABEL"
				description="PLG_USER_ASTRONOMER_PROFILE_FIELD_DOB_DESC"
				info="PLG_USER_ASTRONOMER_PROFILE_SPACER_DOB"
				format="%Y-%m-%d"
				filter="server_utc"
			/>
			<field
				name="tos"
				type="tos"
				default="0"
				label="PLG_USER_ASTRONOMER_PROFILE_FIELD_TOS_LABEL"
				description="PLG_USER_ASTRONOMER_PROFILE_FIELD_TOS_DESC">
				<option value="1">PLG_USER_ASTRONOMER_PROFILE_OPTION_AGREE</option>
				<option value="0">JNO</option>
			</field>
		</fieldset>
	</fields>
</form>
